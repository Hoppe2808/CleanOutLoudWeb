<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="style.css?version=2">
        <link href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet'>
        <title> Clean Out Loud</title>
    </head>
    <body>
        <div class="well main">
            <h3><%= title %></h3>

            <div class="trashtable">
	            <table class="table table-bordered">

	            	<tr class="info">
	            		<th>Camp</th>
	            		<th>Skrald samlet (kilo)</th>
	            	</tr>
                    <% for(var i = 0; i < camps.length; i++){ %>
	            	<tr>
	            		<td><%= camps[i]%></td>
	            		<td><%= weight[i]%></td>
	            	</tr>
          			<% } %>
	            </table>
            </div>
            <br>
            <% if(permission == "admin"){ %>
            <form method="POST" action="/trash/add">
            <div>
                <h3>Indtast skrald indsamlet</h3><br>
                <label>Camp:
                <select class="selectpicker" name="selectpicker">
                    <% for (var i = 0; i < camps.length; i++) { %>
                        <option><%= camps[i] %></option>
                    <% } %>
                </select></label>
                <br>
                <input style="width: 35%; margin: 0 auto" class="form-control" type="number" name="weight" placeholder="Vægt" min="0" step="0.01"><br>
                <input class="btn btn-success" type="submit" value="Indsæt"><br>
            </div>
            </form>
            <% } %>
            <br>
            <form method="POST" action="/back">
                <input class="btn btn-default" type="submit" value="Tilbage">
            </form>
            <br><br>
            <label><%= error %></label>
        </div>
    </body>
</html>